model SuratMasuk {
  no_srt_msk    Int      @id @default(autoincrement())
  tanggal_masuk DateTime
  tanggal_surat DateTime
  dari          String
  perihal       String
  event         String
  disposisi     String
}

model SuratKeluar {
  no_surat        String   @id
  tanggal_srt_klr DateTime
  tujuan          String
  perihal         String
}

model AdministrasiKeuangan {
  no      Int      @id @default(autoincrement())
  tanggal DateTime
  uraian  String
  debit   Boolean
  kredit  Boolean
  nominal Int
}

model PengelolaanProgramKerja {
  no                Int      @id @default(autoincrement())
  kode_program      String   @unique
  komisi            String
  nama_program      String
  penanggung_jwb    String
  tujuan_kegiatan   String
  target_peserta    String
  tgl_pelaksanaan   String
  rincian_rencana   String[]
  nominal_rencana   Int[]
  anggaran_diajukan Int
  total_anggaran    Int
  realisasi         Int
}

model Viatikum {
  id               Int      @id @default(autoincrement())
  nama             String
  kelompok         String[]
  periode          String
  nominal_viatikum Int
  nominal_total    Int
  keterangan       String
  id_user          Int
